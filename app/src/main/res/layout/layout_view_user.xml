<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/loginbg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/circle_imgageview"
            android:layout_width="225dp"
            android:layout_height="225dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/r_name"
            android:layout_below="@+id/circle_imgageview"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="none"
                android:hint="Name"
                android:drawableLeft="@drawable/name"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_name"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_gender"
            android:layout_below="@+id/view8"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="none"
                android:hint="Gender"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_gender"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_dob"
            android:layout_below="@+id/view9"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Date"
                android:inputType="none"
                android:drawableLeft="@drawable/dob"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_dob"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_contact"
            android:layout_below="@+id/view10"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Contact"
                android:drawableLeft="@drawable/phone_black"
                android:inputType="none"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_contact"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_desc"
            android:layout_below="@+id/view11"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Desc"
                android:inputType="none"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_desc"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_rating"
            android:layout_below="@+id/view12"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/view_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/star_black"
                android:hint="None (Only available for Tow Drivers)"
                android:inputType="none"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".User">

    <LinearLayout
        android:id="@+id/ll_user"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="13dp">

            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/back_black"
                />


            <ImageButton
            android:id="@+id/editButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/edit_black"
            />


            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/user">
            </ImageView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_pic"
                android:text="@string/username"
                android:gravity="center"
                android:textSize="20sp">
            </TextView>


        </RelativeLayout>

       <RelativeLayout
           android:id="@+id/rl_2"
           android:layout_marginTop="10dp"
           android:padding="10dp"
           android:layout_below="@+id/user_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <androidx.cardview.widget.CardView
               android:id="@+id/cv_email"
               android:layout_marginTop="20dp"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="12dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="15dp"
                   android:text="@string/email"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_name"
               android:layout_below="@+id/cv_email"
               android:layout_marginTop="15dp"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="12dp"
                   android:text="@string/name"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_gender"
               android:layout_below="@+id/cv_name"
               android:layout_marginTop="15dp"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="12dp"
                   android:text="@string/gender"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_dob"
               android:layout_below="@+id/cv_gender"
               android:layout_marginTop="15dp"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="12dp"
                   android:text="@string/dob"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_contact"
               android:layout_below="@+id/cv_dob"
               android:layout_marginTop="15dp"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="@color/colorGrey"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="12dp"
                   android:text="@string/contact"/>

           </androidx.cardview.widget.CardView>
       </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
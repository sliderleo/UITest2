<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/loginbg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterType">

    <TextView
        android:id="@+id/register_type_text"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Register as "
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:textStyle="bold">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_user"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white_alpha"
        android:layout_below="@+id/register_type_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="350dp"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/car_pic"
                android:layout_centerHorizontal="true"
                android:src="@drawable/car"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="As a driver "
                android:textSize="20dp"
                android:layout_below="@+id/car_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_tow"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white_alpha"
        android:layout_below="@+id/card_user"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="350dp"
        android:layout_height="200dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tow_pic"
                android:layout_centerHorizontal="true"
                android:src="@drawable/truck"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="As a tow truck driver (Company details are required)"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_below="@+id/tow_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
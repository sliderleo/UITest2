<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/rl_register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Register"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/register_text3"
            android:layout_below="@+id/register_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Let's hook you up with an account !"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            >
        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_email"
            android:layout_below="@+id/register_text3"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/email"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>
        </androidx.cardview.widget.CardView>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_email"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_password1"
            android:layout_below="@+id/view3"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock_black"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_password1"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/r_password2"
            android:layout_below="@+id/view5"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock_black"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp">
            </EditText>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_below="@id/r_password2"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/cv_submit_button"
            app:cardCornerRadius="25dp"
            android:layout_below="@+id/view4"
            android:background="@color/cyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/submit_button"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</ScrollView>
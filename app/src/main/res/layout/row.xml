<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/car_pic"
            android:src="@drawable/car"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@id/car_pic"
            android:id="@+id/carplate_text"
            android:text="Car Plate: "
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="2dp"
            android:id="@+id/carmodel_text"
            android:layout_toRightOf="@id/car_pic"
            android:layout_below="@+id/carplate_text"
            android:text="Model: "
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/insurancs_text"
            android:layout_toRightOf="@id/car_pic"
            android:layout_below="@+id/carmodel_text"
            android:text="Insurance: "
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>